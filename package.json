{
  "name": "rx-json-ui",
  "version": "0.0.1",
  "description": "Framework to generate reactive UI/forms based on definitions made on json and json schema files",
  "author": {
    "name": "Adrian Panella",
    "email": "ianchi74@outlook.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "cd projects/rx-json-ui-cli && npm install",
    "build-lib": "rm -rf dist/rx-json-ui/* && ng build rx-json-ui --prod && npm run bundle-styles",
    "watch-lib": "ng build rx-json-ui --watch",
    "lint-lib": "ng lint rx-json-ui",
    "publish-lib": "npm run build-lib && cd dist/rx-json-ui && npm version patch -m 'LIB: Release %s' && npm publish && git push --tags",
    "bundle-styles": "scss-bundle -p .",
    "build-doc": "rm -rf dist/doc && typedoc --ignoreCompilerErrors --exclude projects/rx-json-ui/src/lib/core/base/widget.directive.ts --tsconfig projects/rx-json-ui/tsconfig.json projects/rx-json-ui",
    "build-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -c ",
    "watch-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -w -c ",
    "publish-cli": "npm run build-cli && cd projects/rx-json-ui-cli && npm version patch -m 'CLI: Release %s' && npm publish && git push --tags",
    "generate-schemas": "rm -rf dist/schema && node ./projects/rx-json-ui-cli/bin/cli.js g -p src/ -m src/app/app.module#AppModule -o WidgetsDef.json dist/schema"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged --pattern \"*.{ts,scss,css,html}\""
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "core-js": "^3.5.0",
    "espression": "^1.4.0",
    "espression-rx": "^0.3.1",
    "rxjs": "^6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.21",
    "@angular-devkit/build-ng-packagr": "^0.803.20",
    "@angular/cli": "^8.3.20",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@rollup/plugin-alias": "^3.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/node": "^12.12.17",
    "codelyzer": "^5.2.0",
    "husky": "^3.1.0",
    "ng-packagr": "^5.7.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rollup": "^1.27.14",
    "rollup-plugin-typescript2": "^0.25.3",
    "scss-bundle": "^3.0.2",
    "ts-node": "^8.5.4",
    "tsickle": "^0.36.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.4",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "~3.5.3"
  }
}
