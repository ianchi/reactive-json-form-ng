{
  "$schema": "http://json-schema.org/draft-07/schema",

  "type": "object",
  "properties": {
    "type": { "enum": ["button"] },
    "bind": { "type": "string" },
    "validate": { "type": "string" },

    "options": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "Label to show on the control (fixed text)"
        },
        "title=": {
          "type": "string",
          "title": "Expression returning label to show on the control"
        },
        "click": {
          "type": "string",
          "title": "Expression to evaluate on click"
        },
        "click=": {
          "type": "string",
          "title": "Expression returning an expression to evaluate on click"
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^required=?$": { "type": "boolean" }
      }
    }
  },

  "additionalProperties": false,
  "required": ["bind"]
}
